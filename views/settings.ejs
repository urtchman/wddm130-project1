<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= user.title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans flex flex-col min-h-screen">

  <!-- Navbar -->
  <header class="bg-gray-800 text-white p-4">
    <div class="flex justify-between items-center">
      <div class="flex items-center space-x-4">
        <img src="/passports/<%=user.passport%>" alt="<%=user.name%>" class="rounded-full max-h-16">
        <span class="text-lg font-semibold"><%=user.name%></span>
      </div>
      <nav class="hidden md:flex space-x-6">
        <a href="/dashboard" class="hover:text-gray-400">Dashboard</a>
        <a href="/dashboard/swap" class="hover:text-gray-400">Exchange Naira</a>
        <a href="/dashboard/history" class="hover:text-gray-400">History</a>
        <a href="/dashboard/settings" class="hover:text-gray-400">Settings</a>
        <a href="/logout" class="hover:text-gray-400">Logout</a>
      </nav>
      <div class="md:hidden">
        <button id="hamburger" class="text-white focus:outline-none">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
    <div id="mobileMenu" class="md:hidden hidden mt-4 space-y-4">
        <a href="/dashboard" class="block text-white hover:text-gray-400">Dashboard</a>
        <a href="/dashboard/swap" class="block text-white hover:text-gray-400">Exchange Naira</a>
        <a href="/dashboard/history" class="block text-white hover:text-gray-400">History</a>
        <a href="/dashboard/settings" class="block text-white hover:text-gray-400">Settings</a>
        <a href="/logout" class="block text-white hover:text-gray-400">Logout</a>
    </div>
  </header>

  <!-- Settings Section -->
  <div class="flex-grow container mx-auto px-4 py-6">
    <div class="bg-white p-6 rounded-lg shadow-lg max-w-lg mx-auto">
      <h2 class="text-2xl font-bold mb-4">Settings</h2>
      <form>
        <div class="mb-4">
          <label for="name" class="block font-medium">Full Name:</label>
          <input type="text" id="name" class="w-full p-3 border rounded-lg" value="<%= user.name %>">
        </div>
        <div class="mb-4">
          <label for="email" class="block font-medium">Email:</label>
          <input type="email" id="email" class="w-full p-3 border rounded-lg" value="<%= user.email %>">
        </div>
        <div class="mb-4">
            <label for="phone" class="block font-medium">Phone:</label>
            <input type="tel" id="phone" class="w-full p-3 border rounded-lg" value="<%= user.phone %>">
          </div>
        <div class="mb-4">
          <label for="password" class="block font-medium">New Password:</label>
          <input type="password" id="password" class="w-full p-3 border rounded-lg" placeholder="Enter new password">
        </div>
        <button class="w-full bg-blue-600 text-white py-3 rounded-lg hover:bg-blue-700">Save Changes</button>
      </form>
    </div>
  </div>

  <!-- Footer -->
  <footer class="bg-gray-800 text-white py-4 mt-auto">
    <div class="container mx-auto text-center">
      <p>&copy; 2025. All rights reserved. <%=user.name%></p>
    </div>
  </footer>

  <!-- JavaScript for Hamburger Menu -->
  <script>
    document.getElementById('hamburger').addEventListener('click', () => {
      document.getElementById('mobileMenu').classList.toggle('hidden');
    });
  </script>
</body>
</html>
