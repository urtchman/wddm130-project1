<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Exchange Rates</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link src="/css/styles.css" rel="stylesheet">
    <link rel="icon" href="/images/naira.png">
    <script>
        const currencies = <%- JSON.stringify(currencies) %>; 
    </script>
</head>
<body class="bg-gray-100 flex flex-col min-h-screen">
    <header class="bg-gradient-to-r from-blue-500 to-blue-700 text-white py-5 px-6 flex justify-between items-center relative">
        <div class="text-2xl font-extrabold">
            <img src="/images/naira.png" alt="Naira" class="inline-block w-10 h-10 mr-2">
            NAIRA SWAP
        </div>
        <nav>
            <button id="menu-btn" class="md:hidden block text-white text-3xl">&#9776;</button>
            <ul id="menu" class="hidden md:flex flex-col md:flex-row md:space-x-6 text-lg mt-4 md:mt-0 absolute md:relative top-full left-0 w-full md:w-auto bg-blue-700 md:bg-transparent">
                <li><a href="/" class="block py-2 px-4 hover:text-gray-300">Home</a></li>
                <li><a href="/exchange-rates" class="block py-2 px-4 hover:text-gray-300">Exchange Rates</a></li>
                <li><a href="/about" class="block py-2 px-4 hover:text-gray-300">About</a></li>
                <li><a href="/contact" class="block py-2 px-4 hover:text-gray-300">Contact</a></li>
                <li><a href="/login" class="block py-2 px-4 hover:text-gray-300">My Account</a></li>
            </ul>
        </nav> 
    </header>

    <!-- Main Content -->
    <main class="container mx-auto p-6 flex-1">
        <!-- Introduction Card -->
        <section class="max-w-7xl mx-auto bg-white p-8 rounded-lg shadow-lg">
            <div class="grid grid-cols-1 gap-6">
                <form>
                    <h1 class="text-2xl font-bold mb-4 text-gray-800">Exchange Rates</h1>
    
                    <!-- Base Currency Selector -->
                    <div class="flex flex-col md:flex-row items-center gap-2">
                        <label for="base-currency" class="font-semibold text-gray-700">Base Currency:</label>
                        <select id="base-currency" class="border rounded px-3 py-2 focus:ring focus:ring-blue-300" onchange="loadRates()">
                            <!-- Add currency options here -->
                        </select>
                    </div>
    
                    <!-- Exchange Rates Table -->
                    <div class="max-h-[400px] overflow-y-auto border rounded-lg shadow-md p-4 bg-white mt-4">
                        <table class="w-[90%] mx-auto border-collapse">
                            <thead class="bg-gray-800 text-white sticky top-0">
                                <tr>
                                    <th class="p-3 text-left border-b">Full Name</th>
                                    <th class="p-3 text-left border-b">Currency</th>
                                    <th class="p-3 text-left border-b">Exchange Rate</th>
                                </tr>
                            </thead>
                            <tbody id="rates-content" class="divide-y">
                                <% for (const currency in exchangeRates) { %>
                                    <tr class="hover:bg-gray-100">
                                        <td class="p-3 border-b"><%= currencies[currency] %></td>
                                        <td class="p-3 border-b font-semibold"><%= currency %></td>
                                        <td class="p-3 border-b text-green-600"><%= exchangeRates[currency] %></td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table> 
                    </div>
                </form>
            </div>
        </section> 
    </main>
    

    <!-- Footer (Fixed at Bottom) -->
    <footer class="bg-black text-white text-center py-4 w-full mt-auto">
        <p class="text-lg">&copy; 2025 Naira Swap. All rights reserved.</p>
    </footer>
    <script src="/js/rates.js"></script>
    <script>
        const menuBtn = document.getElementById('menu-btn');
        const menu = document.getElementById('menu');

        menuBtn.addEventListener('click', () => {
            menu.classList.toggle('hidden');
        });
 
    </script>
</body>
</html>
